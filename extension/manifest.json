{
    "name": " Sintco Sparxmaths Solver",
    "version": "2.0",
    "description": "Sintco Sparxmaths Solver",
    "manifest_version": 3,
    "author": "Najm Ajmal & Rosie",
    "host_permissions": [
        "*://www.sparxmaths.uk/*",
        "https://auth.sparxmaths.uk/*"
    ],
    "icons": {
        "256": "assets/logo.png"
    },
    "action": {
        "default_icon": {
            "256": "assets/logo.png"
        },
        "default_title": "Sparxmaths Solver"
    },
    "permissions": [
        "activeTab",
        "storage",
        "downloads"
    ],
    "content_scripts": [
        {
            "js": [
                "src/index.ts"
            ],
            "css": [
                "styles.css"
            ],
            "matches": [
                "https://*.sparxmaths.uk/*"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "bundle.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}